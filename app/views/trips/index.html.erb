<div class="page-header">
  <h1>
    Trips
    <a href="/trips/new" class="btn btn-lg btn-success">New Trip</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "trips_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
          <%= f.label :ending_date, "Ending date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='ending_dategteqPicker'>
                  <%= f.text_field :ending_date_gteq, :class => "form-control", :placeholder => "Ending date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='ending_datelteqPicker'>
                  <%= f.text_field :ending_date_lteq, :class => "form-control", :placeholder => "Ending date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#ending_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#ending_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#ending_dategteqPicker').on("dp.change", function (e) {
                  $('#ending_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#ending_datelteqPicker').on("dp.change", function (e) {
                  $('#ending_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :beginning_date, "Beginning date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='beginning_dategteqPicker'>
                  <%= f.text_field :beginning_date_gteq, :class => "form-control", :placeholder => "Beginning date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='beginning_datelteqPicker'>
                  <%= f.text_field :beginning_date_lteq, :class => "form-control", :placeholder => "Beginning date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#beginning_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#beginning_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#beginning_dategteqPicker').on("dp.change", function (e) {
                  $('#beginning_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#beginning_datelteqPicker').on("dp.change", function (e) {
                  $('#beginning_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :activity_id, "Activity" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :activity_id_gteq, :class => "form-control", :placeholder => "Activity greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :activity_id_lteq, :class => "form-control", :placeholder => "Activity less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :category_id, "Category" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :category_id_gteq, :class => "form-control", :placeholder => "Category greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :category_id_lteq, :class => "form-control", :placeholder => "Category less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :itinerary_items_name_cont, "ItineraryItem name contains" %>
      <%= f.text_field :itinerary_items_name_cont, :class => "form-control", :placeholder => "ItineraryItem name contains" %>
    </div>

<div class="form-group">
      <%= f.label :activities_name_cont, "Activity name contains" %>
      <%= f.text_field :activities_name_cont, :class => "form-control", :placeholder => "Activity name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/trips" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#trips_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Category</th>
        <th>Activity</th>
        <th>Beginning date</th>
        <th>Ending date</th>
        <th>User</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.category_id %></td>
        <td><%= trip.activity_id %></td>
        <td><%= trip.beginning_date %></td>
        <td><%= trip.ending_date %></td>
        <td>
          <% if trip.user.present? %>
            <a href="/users/<%= trip.user.id %>">
              <%= trip.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= trip.name %></td>
        <td>
          <a href="/trips/<%= trip.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == trip.user %>
            <a href="/trips/<%= trip.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_trip/<%= trip.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @trips, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
