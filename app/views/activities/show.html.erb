<div class="page-header">
  <h3>Activity #<%= @activity.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Category</dt>
      <dd>
        <% if @activity.category.present? %>
          <a href="/categories/<%= @activity.category_id %>">
            <%= @activity.category.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>Trip</dt>
      <dd>
        <% if @activity.trip.present? %>
          <a href="/trips/<%= @activity.trip_id %>">
            <%= @activity.trip.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= @activity.name %></dd>

      <dt>Location</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @activity.user.present? %>
          <a href="/users/<%= @activity.user_id %>">
            <%= @activity.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/activities" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @activity.user %>
        <a href="/activities/<%= @activity.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_activity/<%= @activity.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @activity.location_latitude %>,
        "lng": <%= @activity.location_longitude %>,
        "infowindow": "<h5><%= @activity.created_at %></h5><small><%= @activity.location_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>